<project name="weekly auto picks" default="dist">
  <description>
    Builds the auto picks
  </description>
  <!-- set global properties for this build -->
  <property environment="env"/>

  <target name="dist">
    <!-- // start up a version of pm2 -->
    <exec executable="pm2">
      <arg line="start /store/apache/htdocs/pickem/nodejs/bin/www"></arg>
    </exec>

    <!-- // make call to get weekly results for teams -->
    <get src="http://pickem.inquisibee.com?action=week.makeAutoPicks&amp;sAPIKey=AP9aCMwPrkAfsbWsDtVtHEUTqBnsGkZTKAJU6ZAG,U" dest="auto-picks.htm"/>

    <!-- // shut down pm2 -->
    <exec executable="pm2">
      <arg line="stop www"></arg>
    </exec>

    <exec executable="pm2">
      <arg line="delete www"></arg>
    </exec>

    <exec executable="pm2">
      <arg line="kill"></arg>
    </exec>
  </target>

</project>